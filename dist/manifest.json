{
  "name": "UpPeople Chrome",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Chrome extension UPPeople, to immediately add candidates from LinkedIn into your base. UPPeople - power UP your recruitment!",
  "browser_action": {
    "default_icon": "logo512.png",
    "default_popup": "popup.html",
    "default_title": "UpPeople parser"
  },
  "permissions": [
    "tabs", 
    "storage",
    "activeTab",
    "webNavigation", 
    "https://localhost/*",
    "https://161.97.144.240/*", 
    "http://antonmlz.beget.tech/*",
    "https://www.linkedin.com/in/*/*"
  ],
  "background": {
    "scripts": ["./static/js/background.js"],
    "persistent": false
  },
  "content_scripts": [{
    "matches": [
      "https://www.linkedin.com/in/*"
    ],
    "all_frames": false,
    "js": ["./static/js/content.js"],
    "run_at": "document_end"
  }],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "start_url": ".",
  "display": "standalone",
  "theme_color": "#000000",
  "background_color": "#ffffff"
}