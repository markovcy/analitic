{
  "name": "UpPeople Chrome",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Chrome extension UPPeople, to immediately add candidates from LinkedIn into your base. UPPeople - power UP your recruitment!",
  "browser_action": {
    "default_icon": "logo512.png",
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["./static/js/content.js"],
      "all_frames": false,
      "run_at": "document_end"
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "start_url": ".",
  "display": "standalone",
  "theme_color": "#000000",
  "background_color": "#ffffff"
}